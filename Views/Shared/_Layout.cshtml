<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <style type="text/css">
        ul {
            list-style-type: none;  
        }
        a {
             text-decoration: none;
            color: black;
            font-size: 1.5rem;
        }
        a:hover {
            color: gray;
        }
        .body {
            border: 1px solid gray;
            padding: 1rem;
        }
    </style>
</head>
<body>
<div class="header">
    <h2>Reactjs.NET example</h2>
    @Html.React("Components.Nav", new {})
</div>

<div class="body">
    @RenderBody()
</div>


</body>
</html>
